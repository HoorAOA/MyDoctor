<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@color/transparent_color"
    android:paddingStart="@dimen/dp_15"
    android:layout_marginTop="@dimen/dp_30"
    android:paddingTop="@dimen/dp_25"
    android:paddingEnd="@dimen/dp_15"
    android:paddingBottom="@dimen/dp_25">

    <de.hdodenhof.circleimageview.CircleImageView
        android:id="@+id/img_profile_pic"
        android:layout_width="@dimen/dp_60"
        android:layout_height="@dimen/dp_60"
        app:civ_border_width="@dimen/dp_1"
        android:src="@color/dim_white"
        app:civ_circle_background_color="@color/view_separator_bg_color"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/txt_name"
        style="@style/SmallRegularSecondaryColorTextViewStyle"
        android:layout_width="0dp"
        android:layout_height="27dp"
        android:layout_marginStart="@dimen/dp_20"
        android:layout_marginTop="@dimen/dp_5"
        android:ellipsize="end"
        android:gravity="start"
        android:maxLines="1"
        android:textAlignment="viewStart"
        android:textDirection="locale"
        android:visibility="visible"
        android:textColor="@color/dark_grey"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toEndOf="@+id/img_profile_pic"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/txt_mobile_number"
        style="@style/SmallRegularSecondaryColorTextViewStyle"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginStart="@dimen/dp_20"
        android:ellipsize="end"
        android:maxLines="1"
        android:textAlignment="viewStart"
        android:textDirection="locale"
        android:textColor="@color/dark_grey"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toEndOf="@+id/img_profile_pic"
        app:layout_constraintTop_toBottomOf="@+id/txt_name" />

</androidx.constraintlayout.widget.ConstraintLayout>
